---
import { getStaticPaths, getI18nProps } from '@i18n/helperi18n';
export { getStaticPaths };

interface Props { title?: string; }

const { lang, t } = getI18nProps(Astro.params, 'about');
const tr = (key: string) => t(key as any);

const team = [
  { id: 'member1', img: '/images/Dorian.webp', ratio: 'aspect-[4/5]' },
  { id: 'member2', img: '/images/Mile.webp',   ratio: 'aspect-[4/5]' },
  { id: 'member3', img: '/images/Dilan.webp',  ratio: 'aspect-[4/5]' },
  { id: 'member4', img: '/images/Dari.webp',   ratio: 'aspect-[4/5]' },
];
---

<section id="about" class="bg-white pt-12 pb-20 sm:pt-4 sm:pb-10">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <!-- Encabezado -->
    <div class="mx-auto max-w-2xl sm:text-center">
      <h2
        class="text-4xl font-semibold tracking-tight text-primary sm:text-5xl"
        data-aos="fade-up"
        data-aos-duration="800"
      >
        {t('about.team.title')}
      </h2>
      <p
        class="mt-6 text-lg/8 text-black-light"
        data-aos="fade-up"
        data-aos-duration="800"
        data-aos-delay="100"
      >
        {t('about.team.subtitle')}
      </p>
    </div>

    <!-- Grid de miembros -->
    <ul
      role="list"
      class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-6 gap-y-20 sm:grid-cols-2 lg:max-w-4xl lg:gap-x-8 xl:max-w-none"
    >
      {team.map((m, idx) => (
        <li
          class="flex flex-col gap-6 xl:flex-row"
          data-aos={idx % 2 === 0 ? 'fade-right' : 'fade-left'}
          data-aos-duration="900"
          data-aos-delay={100 + idx * 50}
        >
          <img
            src={m.img}
            alt={tr(`about.team.members.${m.id}.name`)}
            class={`${m.ratio} w-52 flex-none rounded-2xl object-cover outline -outline-offset-1 outline-gray-200`}
            loading="lazy"
          />
          <div class="flex-auto">
            <h3 class="text-lg/8 font-semibold tracking-tight text-dark">
              {tr(`about.team.members.${m.id}.name`)}
            </h3>
            <p class="text-base/7 text-secondary">
              {tr(`about.team.members.${m.id}.role`)}
            </p>
            <p class="mt-6 text-base/7 text-black-light">
              {tr(`about.team.members.${m.id}.bio`)}
            </p>
          </div>
        </li>
      ))}
    </ul>
  </div>
</section>
