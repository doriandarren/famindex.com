---
import Navbar from "@components/navbar/Navbar.astro";
import { getStaticPaths, getI18nProps } from '@i18n/helperi18n';


export { getStaticPaths };

interface Props {
  title?: string; 
}

const { lang, t, title } = getI18nProps(Astro.params, 'home');


---

<!-- Section - Hero  -->
<div>
  
  <Navbar lang={lang} />

  <div class="relative">
    <div class="mx-auto max-w-7xl">
      <div class="relative z-10 pt-14 lg:w-full lg:max-w-2xl">
        <svg viewBox="0 0 100 100" preserveAspectRatio="none" aria-hidden="true" class="absolute inset-y-0 right-8 hidden h-full w-80 translate-x-1/2 transform fill-white lg:block">
          <polygon points="0,0 90,0 50,100 0,100" />
        </svg>

        <div class="relative px-1 py-32 sm:py-40 lg:px-8 lg:py-56 lg:pr-0">
          <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-xl">
            <h1 class="text-5xl font-semibold tracking-tight text-pretty text-primary-light sm:text-7xl">{t('home.heading')}</h1>
            <p class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8 text-center">{t('home.description')}</p>     
          </div>
        </div>
      </div>
    </div>

    <div class="bg-gray-50 lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
      <img src="/images/hero_2.svg" alt="" class="aspect-3/2 object-cover lg:aspect-auto lg:size-full" />
    </div>
  </div>

<section class="px-4 bg-gray-300 p-">
  <h2 class="text-center text-3xl font-bold text-primary mb-6 mt-20">Descubre cómo transformamos ideas en tecnología</h2>

  <div class="mx-auto w-full max-w-3xl aspect-video rounded-xl overflow-hidden shadow-lg">
    <video
      src="/videos/spot_famindex_2.mp4"
      controls
      class="w-full h-full object-cover"
    ></video>
  </div>
</section>

</div>
